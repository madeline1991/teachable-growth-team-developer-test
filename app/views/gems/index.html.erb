<div>
  <%= render "partials/search", search_term: @search_term %>
  <% unless flash[:errors] %>
    <div class="gem-details">
      <a href="https://rubygems.org/gems/<%= @gem["name"] %>"><%= @gem["name"] %></a>
      <h3>INFORMATION</h2>
        <p><%= @gem["info"] %></p>
      <h3>DEPENDENCIES</h2>
        <% if @dependencies.empty? %>
          <p>None</p>
        <% else %>
          <ul>
            <% @dependencies.each do |dependency| %>
              <li>
                <a href="https://rubygems.org/gems/<%= dependency["name"] %>"><%= dependency["name"] %></a>
              </li>
            <% end %>
            </ul>
        <% end %>
    </div>
  <% end %>
</div>
