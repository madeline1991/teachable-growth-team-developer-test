<div>
  <%= render "partials/search", search_term: @search_term %>
  <% unless flash[:errors] %>
    <div id="gem-details" class="gem-details gem">
      <a href="https://rubygems.org/gems/<%= @gem["name"] %>"><%= @gem["name"] %></a>
      <button id="<%= @gem["name"] %>" class="toggle">
        <%= image_tag("star-gray.png") %>
      </button>
      <h3>INFORMATION</h3>
        <p><%= @gem["info"] %></p>
      <h3>DEPENDENCIES</h3>
        <% if @dependencies.empty? %>
          <p>None</p>
        <% else %>
          <ul>
            <% @dependencies.each do |dependency| %>
              <li>
                <a href="https://rubygems.org/gems/<%= dependency["name"] %>"><%= dependency["name"] %></a>
                <button id="<%= dependency["name"] %>" class="toggle">
                  <%= image_tag("star-gray.png") %>
                </button>
              </li>
            <% end %>
            </ul>
        <% end %>
    </div>
  <% end %>
</div>
